{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "include": [
    "packages/frontend/src",
    "packages/scripts",
    "packages/frontend/server.ts"
  ],
  "references": [
    { "path": "./packages/frontend" }
  ]
}
