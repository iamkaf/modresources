{
  "name": "modresources-monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @modresources/frontend dev",
    "server": "tsx server.ts",
    "dev:concurrent": "concurrently \"pnpm dev\" \"pnpm server\"",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "format": "prettier --write \"packages/**/*.{ts,tsx}\" server.ts",
    "moddy:install": "pip install -e moddy",
    "moddy": "python -m moddy.main"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.0",
    "@types/node": "^24.0.6",
    "concurrently": "^9.2.0",
    "eslint": "^9.30.0",
    "globals": "^16.2.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite": "^7.0.0",
    "vitest": "^3.2.4"
  }
}